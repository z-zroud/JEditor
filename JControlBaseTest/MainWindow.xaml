<Window x:Class="JControlBaseTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helper="clr-namespace:JControls.Helper;assembly=JControls"
        xmlns:local="clr-namespace:JControlBaseTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="20">
            <Button Style="{StaticResource JPrimaryButtonStyle}" MinWidth="60">保存</Button>
            <Button Style="{StaticResource JPrimaryButtonWithCornerStyle}" Margin="5" MinWidth="60">保存</Button>
            <Button Style="{StaticResource JButtonWithInnerShadow}" Margin="5" MinWidth="60" BorderThickness="0"  >保存</Button>
            <Button Style="{StaticResource JGeometryButtonStyle}" Margin="5" helper:ButtonBaseAttach.Geometry="{StaticResource DownGeometry}" />
            <Button Margin="5" MinWidth="60"  >保存</Button>
        </StackPanel>

    </Grid>
</Window>
